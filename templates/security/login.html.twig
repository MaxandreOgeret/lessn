<h4 class="above-form-title"><i style="margin-right: 5px" class="fas fa-sign-in-alt"></i>{{ 'app.main.signin'|trans }}</h4>
{% if error %}
    <div class="alert alert-danger" xmlns="http://www.w3.org/1999/html">
        {{ error.messageKey }}
    </div>
{% endif %}
<form id="loginform" action="{{ path('app_security_login') }}" method="post">
    <div class="row"></div>
    <fieldset>
        {#<legend><i class="fa fa-lock" aria-hidden="true"></i> Sign in</legend>#}
        <div class="form-group">
            {#<label for="username">Username</label>#}
            <input type="text"
                   placeholder="{{ 'app.signin.form.placeholer.username'|trans }}"
                   id="username"
                   name="_username"
                   value="{{ last_username }}"
                   class="stylish-input"
            />
        </div>
        <div class="form-group">
            {#<label for="password">Password</label>#}
            <input
                    type="password"
                    id="password"
                    name="_password"
                    class="stylish-input"
                    placeholder="{{ 'app.signin.form.placeholer.password'|trans }}"
            />
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
        <div style="margin-top: 0px"  class="loginerror error_text"></div>
        <span id="reset-home" class="btn btn-link link" style="margin-top: 20px"><i  class="fas fa-undo-alt"></i></span>
        <button id="signin-submit-btn" class="btn btn-link link" style="margin-top: 20px"><i  class="fas fa-arrow-right"></i></button>
    </fieldset>
    </div>
</form>

{#<script src="{{ asset('js/app/login.js') }}"></script>#}
<script>
    {{ include('security/login.js.twig') }}
</script>