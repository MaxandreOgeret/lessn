<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="LESSn : {{ 'app.main.what'|trans }}. {{ 'app.main.description'|trans }}." >
        <title>{% block title %}LESSn - {{ 'app.main.description'|trans }}{% endblock %}</title>
        <link href="{{ asset('css/fontawesome/all.css') }}" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/bootstrap/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/base.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/fonts.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/jsgrid/jsgrid.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/jsgrid/jsgrid-theme.min.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

        {{ include('home/topbar.html.twig') }}

        {% block body %}{% endblock %}

        {{ include('home/footer.html.twig') }}

        {{ include('modal/mainModal.html.twig') }}

        <script src="{{ asset('js/jquery/jquery-3.3.1.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap/popper.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/jsgrid/jsgrid.min.js') }}"></script>
        <script src="{{ asset('js/jsgrid/'~app.request.getLocale()|lower~'.js') }}"></script>
        <script src="{{ asset('js/bootstrap/bootbox.min.js') }}"></script>
        <script src="{{ asset('js/app/base.js') }}"></script>
        {% if app.user is not null %}<script>{{ include('manager/manager.js.twig') }}</script>{% endif %}

        {% block javascripts %}{% endblock %}
    </body>
</html>